<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%= form.label :first_name, class: "mb-2 mt-2" %>
        <%= form.text_field :first_name , class: "form-control form-control-lg rounded-3"%>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="form-group">
        <%= form.label :last_name, class: "mb-2 mt-2" %>
        <%= form.text_field :last_name , class: "form-control form-control-lg rounded-3"%>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8">
      <div class="form-group">
        <%= form.label :email, class: "mb-2 mt-2" %>
        <%= form.text_field :email , class: "form-control form-control-lg rounded-3"%>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="form-group">
        <%= form.label :phone, class: "mb-2 mt-2" %>
        <%= form.text_field :phone , class: "form-control form-control-lg rounded-3"%>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%= form.label :occupation, class: "mb-2 mt-2" %>
        <%= form.text_field :occupation , class: "form-control form-control-lg rounded-3"%>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="form-group">
        <%= form.label :address, class: "mb-2 mt-2" %>
        <%= form.text_field :address , class: "form-control form-control-lg rounded-3"%>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-12 mt-4">
        <%= form.submit class: 'btn btn-primary btn-lg rounded-3' %>
        <%= link_to "Back ", friends_path, class:"btn btn-secondary btn-lg rounded-3" %>
    </div>
  </div>
<% end %>
