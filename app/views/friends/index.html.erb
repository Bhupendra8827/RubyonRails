<% if user_signed_in? %>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>E-mail</th>
      <th>Phone</th>
      <th>Occupation</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td> <%= friend.first_name%></td>
        <td> <%= friend.last_name%></td>
        <td> <%= friend.email%></td>
        <td> <%= friend.phone%></td>
        <td> <%= friend.occupation%></td>
        <td> <%= friend.address%></td>
        <td> <%= link_to 'Show',friend, class:"btn btn-primary"%></td>
        <td> <%= link_to 'Edit',edit_friend_path(friend), class:"btn btn-primary"%></td>
         <td> <%= link_to 'Destroy',friend, class:"btn btn-danger", method: :delete,data:{ confirm: 'Are You Sure?' }%></td>
       
        
      </tr>
      <% end %>
  </tbody>
</table>
  <br>
  <%= link_to "New friend", new_friend_path , class:"btn btn-secondary"%>

<% end%>




